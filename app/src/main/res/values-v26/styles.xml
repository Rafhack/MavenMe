<!--suppress AndroidDomInspection -->
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="editTextBackground">@style/TextBackground</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="customDrawableStyle">@style/DrawableEnd</item>
        <item name="customCloseButtonColor">@style/Close</item>
        <item name="customAccountImageColor">@style/Account</item>
        <item name="android:windowSplashscreenContent">@drawable/splash_screen</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="editTextBackground">@style/TextBackground.Dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="customDrawableStyle">@style/DrawableEnd.Dark</item>
        <item name="customCloseButtonColor">@style/Close.Dark</item>
        <item name="customAccountImageColor">@style/Account.Dark</item>
        <item name="android:windowSplashscreenContent">@drawable/splash_screen</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="TextBackground.Dark">
        <item name="android:background">@drawable/shape_edit_text_background_dark</item>
    </style>

    <style name="TextBackground">
        <item name="android:background">@drawable/shape_edit_text_background</item>
    </style>

    <style name="DrawableEnd">
        <item name="android:drawableEnd">@drawable/ic_open_in_new_dark</item>
    </style>

    <style name="DrawableEnd.Dark">
        <item name="android:drawableEnd">@drawable/ic_open_in_new_light</item>
    </style>

    <style name="Close">
        <item name="android:src">@drawable/ic_close_dark</item>
    </style>

    <style name="Close.Dark">
        <item name="android:src">@drawable/ic_close_light</item>
    </style>

    <style name="Account">
        <item name="android:src">@drawable/ic_account_circle_dark</item>
    </style>

    <style name="Account.Dark">
        <item name="android:src">@drawable/ic_account_circle_light</item>
    </style>

    <style name="SolidBackground">
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="SolidBackground.Dark">
        <item name="android:background">#303030</item>
    </style>


</resources>
